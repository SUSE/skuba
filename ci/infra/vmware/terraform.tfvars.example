vsphere_datastore = "3PAR"
vsphere_datacenter = "PROVO"
vsphere_network = "VM Network"
vsphere_resource_pool = "CaaSP_RP"
template_name = "SLES15-SP1-JeOS-cloud-init"

# IMPORTANT, please enter unique identifier bellow as value of stack_name variable to not interfere with other deployments
stack_name = "caasp-v4"

# ssh keys to inject into all the nodes
authorized_keys = [
  "ssh-rsa  Unsafe Shared Key"
]

workers = 3
masters = 3
load-balancers = 1

# IMPORTANT: Replace these ntp servers with ones from your infrastructure
ntp_servers = ["0.novell.pool.ntp.org", "1.novell.pool.ntp.org", "2.novell.pool.ntp.org", "3.novell.pool.ntp.org"]

repositories = [
  { caasp_sle15_sp1 = "http://download.suse.de/ibs/SUSE:/SLE-15-SP1:/Update:/Products:/CASP40/standard/"},
  { basesystem_module_sle15_sp1 = "http://download.suse.de/install/SLP/SLE-15-SP1-Module-Basesystem-RC2/x86_64/DVD1/" },
  { containers_module_sle15_sp1 = "http://download.suse.de/install/SLP/SLE-15-SP1-Module-Containers-RC2/x86_64/DVD1/" },
  { server_applications_module_sle15_sp1 = "http://download.suse.de/install/SLP/SLE-15-SP1-Module-Server-Applications-RC2/x86_64/DVD1/" },
  { suse_ca = "http://download.suse.de/ibs/SUSE:/CA/SLE_15_SP1/" },
  { ha_module_sle15_sp1 = "http://download.suse.de/install/SLP/SLE-15-SP1-Product-HA-RC2/x86_64/DVD1/" }
]

packages = [
    "kubernetes-kubeadm",
    "kubernetes-kubelet",
    "kubernetes-client",
    "cri-o",
    "cni-plugins",
    "ca-certificates-suse",
]
